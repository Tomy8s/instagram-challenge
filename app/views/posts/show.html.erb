<div class="post">
  <%= image_tag @post.image.url, width: '400' %>
  <p><%= @post.created_at %></p>
  <p><%= @post.caption %></p>
  <p><%= link_to 'Delete post', post_path(@post.id), method: :delete %></p>
</div>

<% @comments.each do |cmt| %>
  <div class="comment">
    <p><%= cmt.comment %></p>
    <p><%= cmt.created_at %></p>
  </div>
<% end %>

<%= form_for [@post, @comment] do |f| %>
  <%= f.label :comment %><br>
  <%= f.text_area :comment %><br>
  <%= f.submit 'Comment!' %>
<% end %>